    <script>
        // Snow
        const canvas = document.getElementById('snowCanvas'); const ctx = canvas.getContext('2d');
        let particles = [];
        function resize() { canvas.width = window.innerWidth; canvas.height = window.innerHeight; }
        window.addEventListener('resize', resize); resize();
        class Snowflake {
            constructor() { this.x = Math.random() * canvas.width; this.y = Math.random() * canvas.height; this.size = Math.random() * 4 + 1; this.speed = Math.random() * 1.5 + 0.5; this.wind = Math.random() * 0.5 - 0.25; }
            update() { this.y += this.speed; this.x += this.wind; if (this.y > canvas.height) { this.y = -10; this.x = Math.random() * canvas.width; } }
            draw() { ctx.fillStyle = 'white'; ctx.beginPath(); ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2); ctx.fill(); }
        }
        for (let i = 0; i < 200; i++) particles.push(new Snowflake());
        function animate() { ctx.clearRect(0, 0, canvas.width, canvas.height); particles.forEach(p => { p.update(); p.draw(); }); requestAnimationFrame(animate); }
        animate();

        // Logic
        function openBox() { document.getElementById('box').classList.add('open'); setTimeout(() => goTo(1, 2), 1000); }
        function goTo(from, to) {
            const f = document.getElementById('section' + from); const t = document.getElementById('section' + to);
            f.style.opacity = '0'; f.style.transform = 'scale(0.8)';
            setTimeout(() => { f.classList.remove('active'); t.classList.add('active'); }, 600);
        }
        let revealed = 0;
        function flip(el, text) {
            if (el.classList.contains('revealed')) return;
            el.textContent = text; el.classList.add('revealed'); revealed++;
            if (revealed === 5) { const b = document.getElementById('btnContainer3'); b.classList.remove('hidden'); setTimeout(() => b.style.opacity = '1', 100); }
        }
        function revealQuotes() {
            if (document.getElementById('quotes').classList.contains('revealed-final')) return;
            document.getElementById('santaPopup').classList.add('active');
            setTimeout(() => {
                document.getElementById('cover').classList.add('hidden');
                const q = document.getElementById('quotes'); q.classList.remove('hidden'); q.classList.add('revealed-final');
                document.querySelectorAll('.quote-line').forEach((line, i) => setTimeout(() => line.classList.add('visible'), i * 400));
            }, 800);
        }
    </script>
